{
  "compilerOptions": {
    "checkJs": true,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    "lib": ["ES2022", "DOM"],
    "types": ["@types/node"],

    "allowUnreachableCode": false,
    "allowUnusedLabels": false,

    "strict": true,
    "noImplicitAny": false,

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
  ]
}
